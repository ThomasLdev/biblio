{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Couverture</th>
            <td>{{ book.cover }}</td>
        </tr>
            <tr>
                <th>Pages</th>
                <td>{{ book.pages }}</td>
            </tr>
        <tr>
            <th>Editeur</th>
            <td>A VENIR</td>
        </tr>
            <tr>
                <th>Publié en</th>
                <td>{{ book.publishedIn ? book.publishedIn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ajouté le</th>
                <td>{{ book.createdAt ? book.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ book.updatedAt ? book.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        <tr>
            <th>Favoris</th>
            <td>{{ book.note }}</td>
        </tr>
        <tr>
            <th>Prêté à</th>
            <td>{{ book.lentTo }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
